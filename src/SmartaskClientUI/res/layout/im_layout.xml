<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:text="Chatting with " android:id="@+id/imChatWith"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="20px"></TextView>
	<EditText android:text="" android:id="@+id/imChatWindow"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:editable="false" android:scrollbars="vertical"
		android:scrollbarAlwaysDrawVerticalTrack="true" android:lines="15"
		android:scrollbarStyle="insideOverlay"></EditText>


	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<EditText android:text="" android:id="@+id/imSendBox"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:width="265dip" android:editable="true"></EditText>
		<Button android:text="Send" android:id="@+id/imSendButton"
			android:layout_width="wrap_content" android:layout_height="fill_parent"></Button>
	</LinearLayout>

</LinearLayout>
